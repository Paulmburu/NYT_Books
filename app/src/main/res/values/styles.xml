<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@color/teal200</item>
    </style>

    <style name="Widget.NYTBooks.Book.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">?android:attr/colorControlHighlight</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">@dimen/book_card_corner_radius</item>
    </style>

    <style name="Widget.NYTBooks" parent="@android:style/Widget.Material" />

    <style name="Widget.NYTBooks.MultilineBody">
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.NYTBooks.NoticeBody" parent="@style/Widget.NYTBooks.MultilineBody">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.NYTBooks.H1" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

</resources>